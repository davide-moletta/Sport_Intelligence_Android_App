<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/marginStandard"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/homeLogo"
        android:layout_height="@dimen/homeLogo"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tennisButton"
        android:layout_width="@dimen/homeButtonWidth"
        android:layout_height="@dimen/homeButtonHeight"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/tennis"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/paddingStandard"
        android:paddingEnd="@dimen/paddingStandard"
        android:text="@string/tennisHome"
        android:textSize="@dimen/homeButton"
        app:drawableEndCompat="@drawable/ic_tennisball"
        app:layout_constraintBottom_toTopOf="@+id/soccerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/soccerButton"
        android:layout_width="@dimen/homeButtonWidth"
        android:layout_height="@dimen/homeButtonHeight"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/soccer"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/paddingStandard"
        android:paddingEnd="@dimen/paddingStandard"
        android:text="@string/soccerHome"
        android:textSize="@dimen/homeButton"
        app:drawableEndCompat="@drawable/ic_soccerball"
        app:layout_constraintBottom_toTopOf="@+id/volleyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tennisButton" />

    <TextView
        android:id="@+id/volleyButton"
        android:layout_width="@dimen/homeButtonWidth"
        android:layout_height="@dimen/homeButtonHeight"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/volley"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/paddingStandard"
        android:paddingEnd="@dimen/paddingStandard"
        android:text="@string/volleyHome"
        android:textSize="@dimen/homeButton"
        app:drawableEndCompat="@drawable/ic_volleyball"
        app:layout_constraintBottom_toTopOf="@+id/basketButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soccerButton" />

    <TextView
        android:id="@+id/basketButton"
        android:layout_width="@dimen/homeButtonWidth"
        android:layout_height="@dimen/homeButtonHeight"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/basket"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/paddingStandard"
        android:paddingEnd="@dimen/paddingStandard"
        android:text="@string/basketHome"
        android:textSize="@dimen/homeButton"
        app:drawableEndCompat="@drawable/ic_basketball"
        app:layout_constraintBottom_toTopOf="@+id/telegramIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volleyButton" />

    <ImageView
        android:id="@+id/telegramIcon"
        android:layout_width="@dimen/bigImage"
        android:layout_height="@dimen/bigImage"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_telegramicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basketButton"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>